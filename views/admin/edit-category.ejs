<%- include('../partials/admin-header.ejs') %>

<div class="content-header">
    <div>
        <h2 class="content-title card-title">Edit Category</h2>
    </div>
    <div>
        <a href="/admin/categories/" class="btn btn-outline-dark">Go Back</a>
    </div>
</div>

<div class="content-wrapper">
    <div class="container-fluid">

        <div class="row mt-3">
            <div class="col-lg-6">
                <div class="card" style="margin-top: 60px; margin-left: 60px;">
                    <div class="card-body">
                        <div class="card-title">EDIT CATEGORY</div>
                        <hr>
                        <form method="post">
                            <div class="form-group mt-3">
                                <label for="input-1">Category Name</label>
                                <input type="text" name="category" required class="form-control" id="input-1">
                            </div>

                            <div class="form-group mt-3">
                                <label for="input-2">Category Status</label>
                                <select name="status" class="form-control" id="input-2">
                                    <option value="active">Active</option>
                                    <option value="inactive">Inactive</option>
                                </select>
                            </div>

                            <div class="form-group mt-3">
                                <button type="submit" class="btn btn-primary px-5"><i class="icon-lock"></i> UPDATE</button>
                            </div>
                        </form>
                        <% if(typeof message !=='undefined' ){ %>
                        <h6><br>
                            <%= message %>
                        </h6>
                        <% } %>
                    </div>
                </div>
            </div>

        </div><!--End Row-->
</div>
<%- include('../partials/admin-footer.ejs') %>